<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sv.edu.ues.fia.minedashboard.Principal">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text="INDICADORES EDUCATIVOS"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <ImageButton
                android:id="@+id/centro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:onClick="centroEducativo"
                app:srcCompat="@drawable/centro_educativo" />

            <ImageButton
                android:id="@+id/matricula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="matriculaEscolar"
                app:srcCompat="@drawable/matricula" />

            <ImageButton
                android:id="@+id/repitencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="repitencia"
                app:srcCompat="@drawable/repitencia" />

            <ImageButton
                android:id="@+id/sobreedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sobreedad"
                app:srcCompat="@drawable/sobreedad" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
